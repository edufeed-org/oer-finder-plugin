{
  "name": "@edufeed-org/oer-adapter-rpi-virtuell",
  "version": "0.0.1",
  "description": "RPI-Virtuell Materialpool adapter for OER source integration via GraphQL",
  "author": "Joachim Happel, Comenius-Institut <happel@comenius.de>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/edufeed-org/oer-finder-plugin.git",
    "directory": "packages/oer-adapter-rpi-virtuell"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
