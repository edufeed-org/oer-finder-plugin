    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@edufeed-org/oer-adapter-core": "workspace:*",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vite": "^6.4.1",
    "vitest": "^2.1.8"
  }
}
