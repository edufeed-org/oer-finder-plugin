{
  "name": "@edufeed-org/oer-finder-plugin",
  "version": "0.0.8",
  "description": "Web Components plugin for OER Aggregator",
  "author": "B310 Digital GmbH",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/edufeed-org/oer-finder-plugin.git",
    "directory": "packages/oer-finder-plugin"
  },
  "main": "./dist/oer-plugin.umd.cjs",
  "module": "./dist/oer-plugin.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/oer-plugin.js",
      "require": "./dist/oer-plugin.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@edufeed-org/oer-finder-api-client": "workspace:*",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-wc": "^2.2.0",
    "globals": "^16.0.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.4.2",
    "rollup-plugin-license": "^3.6.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.11",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
