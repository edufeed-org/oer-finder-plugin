{
  "name": "@edufeed-org/oer-finder-plugin",
  "version": "0.2.0",
  "description": "Web Components plugin for OER Proxy",
  "author": "B310 Digital GmbH",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/edufeed-org/oer-finder-plugin.git",
    "directory": "packages/oer-finder-plugin"
  },
  "module": "./dist/oer-plugin.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/oer-plugin.js"
    },
    "./adapters": {
      "types": "./dist/built-in-registrations.d.ts",
      "import": "./dist/built-in-registrations.js"
    },
    "./adapter/openverse": {
      "types": "./dist/adapter/openverse.d.ts",
      "import": "./dist/adapter/openverse.js"
    },
    "./adapter/arasaac": {
      "types": "./dist/adapter/arasaac.d.ts",
      "import": "./dist/adapter/arasaac.js"
    },
    "./adapter/nostr-amb-relay": {
      "types": "./dist/adapter/nostr-amb-relay.d.ts",
      "import": "./dist/adapter/nostr-amb-relay.js"
    },
    "./adapter/rpi-virtuell": {
      "types": "./dist/adapter/rpi-virtuell.d.ts",
      "import": "./dist/adapter/rpi-virtuell.js"
    },
    "./adapter/wikimedia": {
      "types": "./dist/adapter/wikimedia.d.ts",
      "import": "./dist/adapter/wikimedia.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@edufeed-org/oer-finder-api-client": "workspace:*",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@edufeed-org/oer-adapter-core": "workspace:*",
    "@edufeed-org/oer-adapter-arasaac": "workspace:*",
    "@edufeed-org/oer-adapter-nostr-amb-relay": "workspace:*",
    "@edufeed-org/oer-adapter-openverse": "workspace:*",
    "@edufeed-org/oer-adapter-rpi-virtuell": "workspace:*",
    "@edufeed-org/oer-adapter-wikimedia": "workspace:*",
    "@eslint/js": "^9.18.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-wc": "^2.2.0",
    "globals": "^16.0.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.4.2",
    "rollup-plugin-license": "^3.6.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.11",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
