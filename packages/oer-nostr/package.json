{
  "name": "@edufeed-org/oer-nostr",
  "version": "0.0.1",
  "description": "Nostr protocol integration for OER aggregation",
  "author": "B310 Digital GmbH",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/edufeed-org/oer-finder-plugin.git",
    "directory": "packages/oer-nostr"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "type-check": "tsc -p tsconfig.build.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\""
  },
  "dependencies": {
    "nostr-tools": "^2.17.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "typeorm": "^0.3.0",
    "valibot": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/testing": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@swc/core": "^1.15.8",
    "@types/jest": "^30.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typeorm": "^0.3.27",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-swc": "^1.5.9",
    "valibot": "^1.1.0",
    "vite": "^6.4.1"
  }
}
