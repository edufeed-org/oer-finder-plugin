{
  "name": "@edufeed-org/oer-adapter-nostr-amb-relay",
  "version": "0.0.1",
  "description": "Nostr AMB Relay adapter for OER source integration - search educational metadata via Nostr protocol",
  "author": "B310 Digital GmbH",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/edufeed-org/oer-finder-plugin.git",
    "directory": "packages/oer-adapter-nostr-amb-relay"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "@edufeed-org/oer-adapter-core": "workspace:*",
    "nostr-tools": "^2.17.2",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.4.1"
  }
}
