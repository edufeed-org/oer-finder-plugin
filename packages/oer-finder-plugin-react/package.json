{
  "name": "@edufeed-org/oer-finder-plugin-react",
  "version": "0.0.3",
  "description": "React components for OER Finder Plugin",
  "author": "B310 Digital GmbH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/edufeed-org/oer-finder-plugin.git",
    "directory": "packages/oer-finder-plugin-react"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:plugin": "pnpm --filter @edufeed-org/oer-finder-plugin build",
    "build": "pnpm run build:plugin && vite build && tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@edufeed-org/oer-finder-plugin": "workspace:*",
    "@lit/react": "^1.0.7"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/react": "^19.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "rollup-plugin-license": "^3.6.0",
    "vite": "^6.0.11"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
