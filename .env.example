# Server Configuration
PORT=3000
NODE_ENV=development
# CORS_ORIGIN=true  # Allow all origins (default) or specify domain like https://example.com

# Rate Limiting / Throttle Configuration
# THROTTLE_TTL=60000  # Time-to-live in milliseconds (default: 60000 = 1 minute)
# THROTTLE_LIMIT=10  # Maximum requests per TTL window (default: 10)
# THROTTLE_BLOCK_DURATION=60000  # Block duration in milliseconds after exceeding limit (default: 60000 = 1 minute)

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_NAME=oer_aggregator
POSTGRES_LOGGING=false

# Nostr Relay Configuration
# Use NOSTR_RELAY_URLS (plural) for multiple relays (comma-separated)
# Examples:
#   Single relay: NOSTR_RELAY_URLS=wss://relay.example.com
#   Multiple relays: NOSTR_RELAY_URLS=wss://relay1.com,wss://relay2.com,wss://relay3.com
NOSTR_RELAY_URLS=ws://localhost:10547

# Relay reconnection delay in milliseconds (default: 5000 = 5 seconds)
# NOSTR_RELAY_RECONNECT_TIME=5000
